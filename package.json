{
  "name": "pear-electron",
  "version": "1.1.2",
  "description": "Pear User-Interface Library for Electron",
  "main": "index.js",
  "bin": "bin.js",
  "scripts": {
    "bootstrap": "pear run bin.js",
    "decal": "pear run scripts/decal.js",
    "bundle": "pear run scripts/bundle.js",
    "prepare": "npm --ignore-scripts i && npm run decal && npm run bundle"
  },
  "files": [
    "bin.js",
    "boot.bundle",
    "bootstrap.js",
    "index.js",
    "runtime.js"
  ],
  "pear": {
    "runtimes": "pear://0.3043.3oh9mxcft8rsq3mocxzi7s8hhb7zw8s55nuca95ffsqzd6oyy4zo",
    "name": "pear-electron",
    "presets": {
      "stage": {
        "ignore": [
          "/node_modules/**/prebuilds"
        ]
      }
    },
    "stage": {
      "skipWarmup": "true",
      "only": [
        "by-arch",
        "prebuilds"
      ]
    }
  },
  "keywords": [
    "pear",
    "runtime",
    "electron",
    "Pear Runtime",
    "peer-to-peer",
    "user-interface",
    "UI",
    "interface"
  ],
  "author": "Holepunch",
  "license": "Apache-2.0",
  "dependencies": {
    "bare-env": "^3.0.0",
    "bare-fs": "^4.0.1",
    "bare-module-lexer": "^1.2.0",
    "bare-os": "^3.4.0",
    "bare-pack-drive": "^1.0.2",
    "bare-path": "^3.0.0",
    "bare-pipe": "^4.0.3",
    "bare-subprocess": "^5.0.2",
    "bare-tty": "^5.0.1",
    "bare-unpack": "^1.0.1",
    "corestore": "^6.18.4",
    "hypercore-id-encoding": "^1.3.0",
    "hyperdrive": "^11.13.3",
    "hyperswarm": "^4.8.4",
    "iambus": "^1.0.3",
    "localdrive": "^1.12.1",
    "node-bare-bundle": "^1.4.2",
    "paparam": "^1.6.1",
    "pear-api": "^1.6.5",
    "pear-interface": "^1.0.3",
    "pear-ipc": "^3.2.0",
    "pear-link": "^2.0.6",
    "pear-updater-bootstrap": "github:holepunchto/pear-updater-bootstrap#corestore-option",
    "rache": "^1.0.0",
    "safety-catch": "^1.0.2",
    "script-linker": "^2.5.3",
    "sodium-native": "^4.3.2",
    "streamx": "^2.20.2",
    "url-file-url": "^1.0.4",
    "which-runtime": "^1.2.1"
  },
  "devDependencies": {
    "@fontsource/open-sans": "^5.1.0",
    "bare-module": "^4.8.0",
    "bare-pack": "^1.2.4",
    "drive-bundler": "^2.4.4",
    "graceful-goodbye": "^1.3.2",
    "pear-pack": "^1.0.0",
    "redhat-overpass-font": "^1.0.0"
  }
}
